{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "include": ["**/*"],
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        // this goes against typescript's noPropertyAccessFromIndexSignature
        "useLiteralKeys": "off"
      },
      "suspicious": {
        // not needed, as it is a react project
        "noReactSpecificProps": "off"
      }
    }
  }
}
